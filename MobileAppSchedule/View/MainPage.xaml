<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileAppSchedule.View.MainPage"
             xmlns:vms="clr-namespace:MobileAppSchedule.ViewModel"
             xmlns:fontAwesome="clr-namespace:FontAwesome;assembly=MobileAppSchedule"
             x:DataType="vms:MainViewModel"
             Title="Расписание">

    <ContentPage.Content>
        <StackLayout>
            <StackLayout Orientation="Horizontal">
                <Button FontFamily="FAS" CornerRadius="40" Margin="4"
                    Text="{x:Static fontAwesome:FontAwesomeIcons.Gear}" 
                    Command="{Binding SettingsCommand}"/>
                <Label x:Name="GroupName" FontFamily="NSB" FontSize="30" 
                   Text="{Binding GroupName}"
                   VerticalOptions="Start" 
                   HorizontalOptions="Start" />
            </StackLayout>


        </StackLayout>
    </ContentPage.Content>

</ContentPage>
