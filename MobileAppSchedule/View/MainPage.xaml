<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileAppSchedule.View.MainPage"
             xmlns:vms="clr-namespace:MobileAppSchedule.ViewModel"
             xmlns:fontAwesome="clr-namespace:FontAwesome;assembly=MobileAppSchedule"
             x:DataType="vms:MainViewModel">

    <ContentPage.BindingContext>
        <vms:MainViewModel/>
    </ContentPage.BindingContext>
        <StackLayout Spacing="5">

            <Label VerticalTextAlignment="Center" TextColor="Black" FontSize="40" Text="Выбери свою группу"/>

        <Button HorizontalOptions="Center"
                Text="{x:Static fontAwesome:FontAwesomeIcons.AddressBook}"/>
    </StackLayout>
</ContentPage>
