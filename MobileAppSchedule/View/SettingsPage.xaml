<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileAppSchedule.View.SettingsPage" 
             xmlns:vms="clr-namespace:MobileAppSchedule.ViewModel"
             xmlns:fontAwesome="clr-namespace:FontAwesome;assembly=MobileAppSchedule" 
             x:DataType="vms:SettingsViewModel"
             Title="Расписание">

    <ContentPage.Content>
        <StackLayout Spacing="5" VerticalOptions="Center">
            <Picker Title="Выбери группу"
                    FontFamily="FAB" HorizontalTextAlignment="Center"
                    ItemsSource="{Binding GroupNames}" 
                    SelectedIndex="{Binding }"/>
        </StackLayout>
    </ContentPage.Content>

</ContentPage>